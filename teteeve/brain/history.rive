> object get_age python
    # i18n
    ZERO_YEAR = u"Je suis né cette année" 
    YEARS = u"ans"


    YEAR_BIRTH  = 2017
    YEAR_FORMAT = "%Y"

    import time
    now = time.localtime(time.time())
    age = YEAR_BIRTH - int(time.strftime(YEAR_FORMAT, now))
    if age == 0:
        return u"{0}".format(ZERO_YEAR)
    else:
        return u"{0} {1}".format(age, YEARS)
